<% provide(:title, "Edit user") %>
<h1>設定</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
    <%= render 'fields', f: f %>
    <%= f.submit"編集内容を保存", class: 'btn btn-primary' %>
    <% end %>
    
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails"target="_blank">画像を変更</a>
    </div>
  </div>
</div>